{
    "manifest_version": 3,
    "name": "X-Chrome Site Blocker",
    "version": "1.0.0",
    "description": "Modern site blocker with timer, domain management, and blocking justification flow",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Site Blocker"
    },
    "web_accessible_resources": [
        {
            "resources": ["block-page.html"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"],
            "run_at": "document_start",
            "all_frames": false
        }
    ]
}
